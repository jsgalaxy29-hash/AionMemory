@typeparam TRecord
@inherits OwningComponentBase

<table class="table table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Données</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Items is null)
        {
            <tr><td colspan="3">Chargement…</td></tr>
        }
        else
        {
            @foreach (var item in Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <ul class="list-unstyled mb-0">
                            @foreach (var pair in Deserialize(item.DataJson))
                            {
                                <li><strong>@pair.Key</strong>: @pair.Value</li>
                            }
                        </ul>
                    </td>
                    <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter] public Guid EntityTypeId { get; set; }
    [Parameter] public IDataEngine? DataEngine { get; set; }
    protected IEnumerable<F_Record>? Items { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (DataEngine is not null && EntityTypeId != Guid.Empty)
        {
            Items = await DataEngine.QueryAsync(EntityTypeId);
        }
    }

    private static IDictionary<string, object?> Deserialize(string dataJson)
    {
        try
        {
            var document = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, object?>>(dataJson) ?? new();
            return document;
        }
        catch
        {
            return new Dictionary<string, object?> { ["raw"] = dataJson };
        }
    }
}
