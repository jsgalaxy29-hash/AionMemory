@inherits OwningComponentBase

<div class="card">
    <div style="display:flex; justify-content:space-between; align-items:center;">
        <h5>Timeline</h5>
        <button class="button secondary" @onclick="RefreshInternal">Rafraîchir</button>
    </div>
    <div class="timeline">
        @if (Notes is null)
        {
            <p>Chargement…</p>
        }
        else if (!FilteredNotes.Any())
        {
            <p class="text-muted">Aucune note correspondant au contexte.</p>
        }
        else
        {
            @foreach (var note in FilteredNotes.OrderByDescending(n => n.CreatedAt))
            {
                <div class="timeline-item">
                    <strong>@note.Title</strong>
                    <div>@note.Content</div>
                    <small class="text-muted">@note.CreatedAt.ToLocalTime().ToString("g") (@note.Source)</small>
                </div>
            }
        }
    </div>
</div>

@code {
    [Parameter] public INoteService? NoteService { get; set; }
    [Parameter] public string? TargetType { get; set; }
    [Parameter] public Guid? TargetId { get; set; }

    private IEnumerable<S_Note>? Notes { get; set; }
    private IEnumerable<S_Note> FilteredNotes => Notes?.Where(MatchesContext) ?? Enumerable.Empty<S_Note>();

    protected override async Task OnParametersSetAsync()
    {
        await RefreshInternal();
    }

    public async Task RefreshInternal()
    {
        if (NoteService is not null)
        {
            Notes = await NoteService.GetChronologicalAsync();
            StateHasChanged();
        }
    }

    private bool MatchesContext(S_Note note)
    {
        if (TargetId is null && string.IsNullOrWhiteSpace(TargetType))
        {
            return true;
        }

        if (note.Links is null || note.Links.Count == 0)
        {
            return false;
        }

        return note.Links.Any(link =>
            (string.IsNullOrWhiteSpace(TargetType) ||
             string.Equals(link.TargetType, TargetType, StringComparison.OrdinalIgnoreCase)) &&
            (!TargetId.HasValue || link.TargetId == TargetId.Value));
    }
}