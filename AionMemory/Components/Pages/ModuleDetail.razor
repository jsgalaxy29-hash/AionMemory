@page "/module/{id}"
@inject IMetadataService Metadata
@inject IDataEngine DataEngine
@inject NavigationManager Navigation

<h3>Module</h3>
@if (Module is null)
{
    <p>Chargement du module…</p>
}
else
{
    <div class="grid columns-2">
        <div class="card">
            <div class="module-header">
                <div>
                    <h4>@Module.Name</h4>
                    <p class="text-muted">@Module.Description</p>
                </div>
                <button class="button secondary" @onclick="() => Navigation.NavigateTo($"/dashboard/{Module.Name.ToLowerInvariant()}")">Dashboard</button>
            </div>
            @if (SelectedEntity is not null)
            {
                <DynamicList EntityType="SelectedEntity" DataEngine="DataEngine" OnSelect="OpenRecord" />
            }
        </div>
        <div class="card">
            <h4>Créer un enregistrement</h4>
            @if (SelectedEntity is not null)
            {
                <DynamicForm EntityType="SelectedEntity" DataEngine="DataEngine" OnSaved="HandleSaved" />
            }
        </div>
    </div>
}

@code {
    [Parameter] public string? Id { get; set; }
    private S_Module? Module { get; set; }
    private S_EntityType? SelectedEntity => Module?.EntityTypes.FirstOrDefault();

    protected override async Task OnParametersSetAsync()
    {
        var modules = await Metadata.GetModulesAsync();
        if (Guid.TryParse(Id, out var guid))
        {
            Module = modules.FirstOrDefault(m => m.Id == guid);
        }
    }

    private void OpenRecord(F_Record record)
    {
        Navigation.NavigateTo($"/records/{SelectedEntity?.Name}/{record.Id}");
    }

    private void HandleSaved(F_Record record)
    {
        OpenRecord(record);
    }
}