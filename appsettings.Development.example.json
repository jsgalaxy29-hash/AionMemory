{
  "ConnectionStrings": {
    "Aion": "Data Source=<absolute-path>/aion_dev.db;Cache=Private;Mode=ReadWriteCreate;Foreign Keys=True"
  },
  "Aion": {
    "Database": {
      "EncryptionKey": "<store-in-user-secrets-or-env-AION_DB_KEY>"
    },
    "Storage": {
      "RootPath": "<absolute-path>/storage",
      "EncryptionKey": "<reuse-AION_DB_KEY-or-provide-storage-key>",
      "MaxTotalBytes": 536870912,
      "MaxFileSizeBytes": 52428800
    },
    "Backup": {
      "Folder": "<absolute-path>/storage/backup",
      "RetentionDays": 30,
      "MaxBackups": 10
    },
    "Marketplace": {
      "Folder": "<absolute-path>/marketplace"
    },
    "Ai": {
      "Provider": "local",
      "RequestTimeout": "00:00:30",
      "DefaultHeaders": {
        "User-Agent": "AionMemory/dev"
      }
    }
  }
}
