@using Aion.Domain
@using System.Linq
@using Microsoft.AspNetCore.Components
@inherits OwningComponentBase

<div class="card">
    <div style="display:flex; justify-content:space-between; align-items:center;">
        <h5>Timeline</h5>
        <button class="button secondary" @onclick="RefreshInternal">Rafraîchir</button>
    </div>
    <div class="timeline">
        @if (IsLoading)
        {
            <p>Chargement…</p>
        }
        else if (!FilteredNotes.Any())
        {
            <p class="text-muted">Aucune note correspondant au contexte.</p>
        }
        else
        {
            @foreach (var note in FilteredNotes.OrderByDescending(n => n.CreatedAt))
            {
                <div class="timeline-item">
                    <strong>@note.Title</strong>

                    @if (!string.IsNullOrWhiteSpace(note.Content))
                    {
                        <div>@note.Content</div>
                    }

                    <small class="text-muted">
                        @note.CreatedAt.ToLocalTime().ToString("g")
                    </small>
                </div>
            }
        }
    </div>
</div>

@code {
    // Tu peux passer le service via DI ou en paramètre.
    // DI (standard)
    [Inject] public INoteService? InjectedNoteService { get; set; }

    // Paramètre optionnel si tu veux surcharger le service
    [Parameter] public INoteService? NoteService { get; set; }

    [Parameter] public string? TargetType { get; set; }
    [Parameter] public Guid? TargetId { get; set; }

    private bool IsLoading { get; set; } = true;
    private IReadOnlyList<S_Note> Notes { get; set; } = Array.Empty<S_Note>();

    private IEnumerable<S_Note> FilteredNotes =>
        Notes.Where(MatchesContext);

    protected override async Task OnParametersSetAsync()
    {
        await RefreshInternal();
    }

    public async Task RefreshInternal()
    {
        var service = NoteService ?? InjectedNoteService;
        if (service is null)
        {
            // Aucun service disponible : on arrête proprement
            IsLoading = false;
            Notes = Array.Empty<S_Note>();
            return;
        }

        IsLoading = true;

        // On réutilise ton contrat existant
        IEnumerable<S_Note> enumerable = await service.GetChronologicalAsync();
        Notes = enumerable?.ToList() ?? new List<S_Note>();

        IsLoading = false;
        StateHasChanged();
    }

    private bool MatchesContext(S_Note note)
    {
        // Cas général : aucun filtre => tout passe
        if (TargetId is null && string.IsNullOrWhiteSpace(TargetType))
        {
            return true;
        }

        // Si la note n’a aucun lien associé, elle ne peut pas correspondre au contexte
        if (note.Links is null || note.Links.Count == 0)
        {
            return false;
        }

        // On vérifie si au moins un lien correspond au contexte demandé
        return note.Links.Any(link =>
            (string.IsNullOrWhiteSpace(TargetType) ||
             string.Equals(link.TargetType, TargetType, StringComparison.OrdinalIgnoreCase)) &&
            (!TargetId.HasValue || link.TargetId == TargetId.Value));
    }
}
